
 <%= render 'shared/errors', obj: @article %>
<div  class="jumbotron text-center ">
<%= form_with(model: @article, local: true) do |f| %>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :Text, class: "col-2 col-form-label text-light  font-weight-bold" %>
          <div class="col-10">
            <%= f.text_field :text, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :Description, class: "col-2 col-form-label text-light font-weight-bold" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
<% end %> 
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
  </div>
</div> 
</div>
</div>



